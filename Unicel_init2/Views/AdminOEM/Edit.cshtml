@model Unicel_init2.Models.ViewModels.EditOEMRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit OEM - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    
    @if (Model != null)
    {
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" id="id" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" id="name" class="form-control" asp-for="Name" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark">Update</button>
                <button class="btn btn-danger ms-2" type="submit" asp-area="" asp-controller="AdminOEM" asp-action="Delete">Delete</button>
            </div>
            
        </div>
        </form>
    }
    else
    {
        <p>OEM not found!</p>
    }


</div>
